@ARTICLE{29,
  title     = "The influence of gender on {ICU} admittance",
  author    = "Larsson, Emma and Zettersten, Erik and J{\"a}derling, Gabriella
               and Ohlsson, Anna and Bell, Max",
  abstract  = "BACKGROUND: We assume that critically ill patients are admitted

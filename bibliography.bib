  publisher = "Springer Science and Business Media LLC",
  volume    =  27,
  number    =  1,
  pages     = "16",
  month     =  feb,
  year      =  2019,
  keywords  = "Female gender; Gender dimorphism; ICU admission; Mortality;
               Severe injury; Trauma",
